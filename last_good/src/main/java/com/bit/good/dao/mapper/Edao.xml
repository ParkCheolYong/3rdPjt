<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.good.dao.Edao">
	<select id="listDao" resultType="com.bit.good.dto.EventDto">
		SELECT * FROM EVENT ORDER BY NO DESC
	</select>
	<select id="detailDao" resultType="com.bit.good.dto.EventDto">
		SELECT * FROM EVENT WHERE NO = #{param1}
	</select>
	<insert id="writeDao">
		INSERT INTO EVENT VALUES (EVENT_SEQ.NEXTVAL, #{param1}, #{param2}, #{param3}, #{param4}, #{param5})
	</insert>
	<delete id="deleteDao">
		DELETE FROM EVENT WHERE NO = #{param1}
	</delete>
	<select id="selectEventList" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT B.* FROM (
		SELECT
		CEIL(ROWNUM/10) PAGE
		, COUNT(*) OVER() AS TOTAL_COUNT
		, A.* FROM (
		SELECT * FROM EVENT
		ORDER BY NO 
		) A
		) B
		WHERE PAGE = nvl(#{page}, 1)
	</select>
	<select id="selectEventCount" resultType="com.bit.good.dto.EventDto">
		SELECT COUNT(*) AS TOTAL FROM EVENT
	</select>
</mapper>
